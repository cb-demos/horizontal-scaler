library 'cb-shared-lib@main'
def mvnPodYaml = libraryResource 'podtemplates/gradle/pod.yml'

pipeline {
  agent any
  options { 
    buildDiscarder(logRotator(numToKeepStr: '10'))
    skipDefaultCheckout true
    preserveStashes(buildCount: 10)
  }
  stages {
    stages{
      stage('gradle echo...') {
        steps {
          checkout scm
          container('gradle'){
            sh 'ls'
            sh 'gradle --version'
            sh 'sleep 60'
            sh 'echo gradle completed'
          }
        }  
      }     
    }
  } //close stages
} //pipeline conclusion